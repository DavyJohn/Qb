<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:background="@color/white"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/main_fragment_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/main_fragment_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_fragment_item_progress_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>

            <ProgressBar
                android:id="@+id/main_fragment_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/main_fragment_item_btn"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"
            android:background="@drawable/lin2_shape_normal"
            android:text="立即抢宝"
            android:textSize="11sp"
            android:textColor="@color/main"/>
    </LinearLayout>

</LinearLayout>